{% extends '@PulpyCore/Initialization/base.html.twig' %}

{% block body %}
{% embed '@PulpyCore/Initialization/embeddable/layout.header+content.html.twig' %}

    {% block header %}
        <h1>The database</h1>
        <h2>Setting things up</h2>
    {% endblock header %}

    {% block content %}
        <h1 class="content-subhead">Initialize the database</h1>
        <p>Your database looks empty. We are about to initialize it for you.</p>
        <p>Click the button below to initialize the database, and proceed to ne next step.</p>

        {{ form_start(form, { 'attr': { 'class': 'pure-form pure-form-aligned', 'autocomplete': 'off' }}) }}
            <p class="mt3 text-center"><button type="submit" class="button-xxlarge pure-button pure-button-primary">Continue <i class="fa fa-arrow-circle-right"></i></button></p>
        {{ form_end(form) }}

    {% endblock content %}

{% endembed %}
{% endblock %}